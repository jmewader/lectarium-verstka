            .slider-block__content
                .slider-block__content_preview.violet
                    .slider-block__content_bg
                        img(src="/src/img/background/figures/code.png", alt="bg")
                    .slider-block__content_img
                        img(src="/src/img/people/teacher1.png", alt="preview")
                    .slider-block__content_preview--wrap
                        .slider-block__markers.slider-block__markers_preview
                                span.slider-block__markers_item-blur 0:32
                        .slider-block__content_actions
                            button.slider-block__content_btn
                                +playWhiteSVG('74', '74')

                .slider-block__content_info
                    .slider-block__content_wrap
                        div
                            .slider-block__content_header
                                .slider-block__content_header--wrapper
                                    h3.slider-block__content_title Мария Армянинова
                                    ul.slider-block__content_social
                                        li
                                            a(href="#")
                                                +vkSVG
                                        li
                                            a(href="#")  
                                                +tgSVG
                                        li
                                            a(href="#")
                                                +youTubeSVG
                                .slider-block__arrows
                                    button.slider-block__arrows_arrow.left.disabled
                                        +arrowSliderSVG
                                    button.slider-block__arrows_arrow
                                        +arrowSliderSVG
                            ul.tags
                                li.tags__item.tags__item--gray Информатика
                                li.tags__item ЕГЭ
                                li.tags__item ОГЭ

                        .slider-block__content_descriptions Делаю изучение скучных правил интересным. Используя свои методики по запоминанию сложных понятий, благодаря чему учеба становится понятной.
                        ul.slider-block__content_list
                            li.slider-block__content_list-item
                                span.slider-block__content_list-item--title 30
                                p.slider-block__content_list-item--text потоков выпущено
                            li.slider-block__content_list-item
                                span.slider-block__content_list-item--title 76 баллов
                                p.slider-block__content_list-item--text Средний результат ученика
                            li.slider-block__content_list-item
                                span.slider-block__content_list-item--title 10 лет
                                p.slider-block__content_list-item--text Опыт преподавания
                            li.slider-block__content_list-item
                                span.slider-block__content_list-item--title 56
                                p.slider-block__content_list-item--text Стобальников
                    
                    .slider-block__content_buttons
                        button.main-button.slider-block__content_buttons-btn Посмотреть курсы
                            +arrowBtnWhiteSVG
                        a(href="#").slider-block__content_buttons-link Подробнее о преподавателе
                    
